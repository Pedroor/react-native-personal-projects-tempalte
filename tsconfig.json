{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "types": ["react-native", "jest", "@types/styled-components-react-native"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "baseUrl": "./src",
    "target": "esnext",

    "skipLibCheck": false,
    "paths": {
      "@/*": ["./*"]
    }
  },

  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
